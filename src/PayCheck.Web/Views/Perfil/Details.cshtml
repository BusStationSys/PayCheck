        </a>*@
    </div>

    <div class="row">
        <div class="col-xl-7 col-md-7 mb-4">
            <label for="txtNome">Nome</label>
            <input asp-for=@Model.Nome type="text" readonly class="form-control" id="txtNome">
        </div>

        <div class="col-xl-3 col-md-3 mb-4">
            <label for="txtCpf">CPF</label>
            <input asp-for=@Model.CpfFormatado type="text" readonly class="form-control" id="txtCpf">
