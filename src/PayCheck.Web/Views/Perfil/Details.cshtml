        <div class="col-xl-2 col-md-2 mb-4">
            <label for="txtDataNascimento">Data Nascimento</label>
            <input asp-for=@Model.DataNascimentoFormatada type="text" readonly class="form-control" id="txtDataNascimento">
        </div>
    </div>

    <div class="row">
        <div class="col-xl-3 col-md-3 mb-4">
            <label for="txtEndereco">Endereço</label>
            <input asp-for=@Model.Endereco type="text" readonly class="form-control" id="txtEndereco">
        </div>
        <div class="col-xl-3 col-md-3 mb-4">
            <label for="txtCpf">Número</label>
            <input asp-for=@Model.Numero type="text" readonly class="form-control" id="txtNumero">
        </div>
        <div class="col-xl-3 col-md-3 mb-4">
            <label for="txtSerieCtps">Bairro</label>
            <input asp-for=@Model.Bairro type="text" readonly class="form-control" id="txtBairro">
        </div>
    </div>

    <div class="row">
        <div class="col-xl-3 col-md-3 mb-4">
            <label for="txtNumeroCtps">CTPS</label>
            <input asp-for=@Model.NumeroCtps type="text" readonly class="form-control" id="txtNumeroCtps">
        </div>
        <div class="col-xl-3 col-md-3 mb-4">
            <label for="txtSerieCtps">Série</label>
            <input asp-for=@Model.SerieCtps type="text" readonly class="form-control" id="txtSerieCtps">
        </div>
        <div class="col-xl-3 col-md-3 mb-4">
            <label for="txtUfCtps">UF</label>
            <input asp-for=@Model.UfCtps type="text" readonly class="form-control" id="UfCtps">
