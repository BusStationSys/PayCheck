@model ARVTech.DataAccess.DTOs.UniPayCheck.LoginRequestDto

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Login</title>

    <!-- Custom fonts for this template-->
    <link href="~/Theme/startbootstrap-sb-admin-2-gh-pages/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Theme/startbootstrap-sb-admin-2-gh-pages/css/sb-admin-2.min.css" rel="stylesheet" type="text/css">
</head>

<body class="bg-gradient-success">
    <div class="container">

        @*<div class="alert alert-danger alert-dismissible" style="display: none;">*@
        @*        <div class="alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h4 id="">
        <i class="icon fa fa-ban"></i>

        </h4>
        <span></span>
        </div>*@

        @*<div class="alert alert-info alert-dismissible" role="alert" style="display: none;">*@
        @*        <div class="alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>
        <i class="icon fa fa-info"></i>Atenção
        </strong>
        <br />
        <span></span>
        </div>*@

        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <div class="row">
                            <div class="col-lg-6"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="alert alert-danger alert-dismissible" style="display: none;"></div>
                                    <div class="alert alert-warning alert-dismissible" style="display: none;"></div>

                                    @if (ViewBag.ErrorMessage != null)
                                    {
                                        <div class="alert alert-danger alert-dismissible">
                                            <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                                            <strong>Erro</strong>
                                            @ViewBag.ErrorMessage
                                        </div>
                                    }
                                    else if (ViewBag.ValidateMessage != null)
                                    {
                                        <div class="alert alert-warning alert-dismissible">
                                            <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                                            <strong>Validação</strong>
                                            @ViewBag.ValidateMessage
                                        </div>
                                    }

                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Seja bem-vindo(a)!</h1>
                                    </div>
                                    <form class="user" asp-action="Login" asp-controller="Access" method="post">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user" id="txtCpfEmailNomeUsuario" aria-describedby="emailHelp" placeholder="Digite seu CPF, E-mail ou Nome de Usuário" asp-for="CpfEmailUsername" required />
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user" id="txtSenha" placeholder="Digite sua Senha" asp-for="Password" required />
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" id="chkMostrarSenha">
                                                <label class="custom-control-label" for="chkMostrarSenha">Mostrar Senha</label>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" id="chkConectado" asp-for="KeepLoggedIn">
                                                <label class="custom-control-label" for="chkConectado">Mantenha-me conectado</label>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-success btn-user btn-block">
                                            Login
                                        </button>
                                        <hr>
                                        <a href="index.html" class="btn btn-linkedin btn-user btn-block">
                                            <i class="fab fa-linkedin fa-fw"></i> Login with Linkedin
                                        </a>
                                        <a href="index.html" class="btn btn-google btn-user btn-block">
                                            <i class="fab fa-google fa-fw"></i> Login with Google
                                        </a>
                                        <a href="index.html" class="btn btn-facebook btn-user btn-block">
                                            <i class="fab fa-facebook-f fa-fw"></i> Login with Facebook
                                        </a>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="forgot-password.html">Esqueci minha senha</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small"><strong>Primeiro acesso?</strong></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

