@model IEnumerable<PayCheck.Web.Models.DemonstrativoPagamentoViewModel>

@{
    ViewData["Title"] = "Index";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">

    <thead>

        <tr>

            <th>

                @Html.DisplayNameFor(model => model.Guid)

            </th>

            <th>

                @Html.DisplayNameFor(model => model.Competencia)

            </th>

            <th></th>

        </tr>

    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Guid)
                </td>
                <td>

                    @Html.DisplayFor(modelItem => item.Competencia)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Guid }) |

                    @Html.ActionLink("Details", "Details", new { id=item.Guid }) |

                    @Html.ActionLink("Delete", "Delete", new { id=item.Guid })
                </td>
            </tr>
        }
    </tbody>
</table>