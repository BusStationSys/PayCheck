                    <tr>
                    <td colspan="4" class="text-center">
                    Nenhum registro encontrado.
                    </td>
                    </tr>
                    }
                    </tbody> *@
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <!-- Custom styles for this page -->
    <link href="@Url.Content("~/theme/startbootstrap-sb-admin-2-gh-pages/vendor/datatables/datatables.bootstrap4.min.css") rel="stylesheet" type="text/css" />
}

@section Scripts {
    <!-- Page level plugins -->
    <script src="~/theme/startbootstrap-sb-admin-2-gh-pages/vendor/datatables/jquery.datatables.min.js"></script>
    <script src="~/theme/startbootstrap-sb-admin-2-gh-pages/vendor/datatables/datatables.bootstrap4.min.js"></script>

    <script src="~/theme/startbootstrap-sb-admin-2-gh-pages/js/demo/datatables-demo.js"></script>

    <script>
        $(document).ready(function () {
            $('#tblColaboradores').DataTable({
                "lengthMenu": [10, 25, 50, 100],
                "pageLength": 10,
                "paging": true,
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "/Colaborador/GetDataTable",
                    "type": "POST",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "guid", "title": "Guid" },
                    { "data": "cpf", "title": "CPF" },
                    { "data": "dataNascimento", "title": "Nascimento" },
                    {
                        "data": "nome", "title": "Nome",
                        "render": function (data, type, row) {
                            return '<a href="/Colaborador/Edit?guid=' + row.guid + '">' + data + '</a>';
                        }
                    }],
                "columnDefs": [
                    { "className": "dt-center", "targets": [1, 2] },

                    { "targets": [1, 2, 3], searchable: true, visible: true },

                    { "width": "15%", "targets": 1 },
                    { "width": "10%", "targets": 2 },

                    { "targets": '_all', searchable: false, visible: false }
                ]
            });
        });
    </script>
}