                        <td>
                            @*                    @Html.ActionLink("Edit", "Edit", new { id=item.Guid }) |

                    @Html.ActionLink("Details", "Details", new { id=item.Guid }) |

                    @Html.ActionLink("Delete", "Delete", new { id=item.Guid })*@

                            @Html.ActionLink("Detalhes", "Details", new { guid = item.Guid }, new { @class = "btn btn-success btn-xs" })

                            @*<a href="@Url.Action("your action", "your controller", new { id = item.Id }" class="btn btn-success btn-xs">Delete</a>*@
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>
                        <div>Nenhum registro encontrado.</div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>